<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Добавить задание</h4>
      </div>
      <div class="modal-body">


<%= form_for(@task) do |f| %>  <!-- (@task, remote: true) -->
    <strong>Проект:</strong> <%= f.collection_select :project_id, @projects, :id, :name, {}, {class: "form-control"} %><br>
    <strong>Приоритет:</strong> <%= f.collection_select :tasktip_id, Tasktip.all, :id, :name, {}, {class: "form-control"} %><br>
    <div class="field"><%= f.text_field :object, placeholder: "Объект", class: "form-control" %></div>
    <div class="field"><%= f.text_field :action, placeholder: "Действие", class: "form-control" %></div>
    <div class="field"><label><%= f.check_box :actual, class: "checkbox" %>Актуальное</label></div>
    <div class="field"><%= f.check_box :itislink, class: "checkbox" %> <strong>Ссылка</strong></div>
    <div class="field"><%= f.text_area :description, placeholder: "Описание", :size => '70x2', class: "form-control"  %></div>
    <div class="field"><%= f.check_box :calendarity, class: "checkbox"  %> <strong> Календарное, дата:</strong> <%= f.datetime_local_field :dt, { :default => DateTime.now } %></div>
    <%= f.submit "Добавить", :class => 'btn btn-large btn-primary' %>
<% end %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
