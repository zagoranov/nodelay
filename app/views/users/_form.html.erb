<%= form_for(@user) do |f| %>

<div class="field">    
  <%= f.text_field :name, :class=>"form-control", :placeholder=>"Имя" %>
</div>

<div class="field">    
  <%= f.text_field :email, :class=>"form-control", :placeholder=>"Email" %>
</div>

<p>
<%= f.check_box :schedules %><%= f.text_field :schedule_url, :class=>"form-control", :placeholder=>"URL для POST-сообщения" %>
</p>

<div class="field">    
  <%= f.text_field :password, :type=>"password", :class=>"form-control", :placeholder=>"Пароль" %>
</div>

<div class="field">    
  <%= f.text_field :password_confirmation, :type=>"password", :class=>"form-control", :placeholder=>"Пароль" %>
</div>

<br><p class="button"><%= f.submit "Записать", :class => 'btn btn-large btn-primary' %></p>

<% end %>
